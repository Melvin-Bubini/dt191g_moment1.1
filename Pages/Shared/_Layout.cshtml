<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dt191g_moment1._1</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dt191g_moment1._1.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
</head>

<body>
    <div class="container border-bottom vw-100">
        <!-- Logotyp -->
        <a class="navbar-brand mb-4" asp-area="" asp-page="/Index">
            <img src="images/standardLogo.svg" alt="Logotyp">
        </a>

        <div class="container">
            <div>
                <p>Dagens datum är: </p>
            </div>
        </div>
    </div>
    <div class="d-flex">
        <!-- Header (vänster navigering) -->
        <header class="header flex-shrink-0">
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-end vh-100">
                <div class="container-fluid d-flex flex-column align-items-start py-3">
                    <!-- Toggler för mindre skärmar -->
                    <button class="navbar-toggler mb-3" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Länklista -->
                    <div class="collapse navbar-collapse" id="navbarContent">
                        <ul class="navbar-nav flex-column w-100">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Startsida</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Razor">Razor</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/About">Om sida</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <!-- Main innehåll -->
        <main class="main flex-grow-1 p-3">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; Av Melvin Bubini - Kontakta mig via epost: <a asp-area=""
                asp-page="/Privacy">mebu2300@student.miun.se</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
